{# templates/components/block-card.html.twig #}
<div class="{{ container ?? 'container' }} derafu-block-card {{ class ?? '' }}"
    {% if id is not null and id != '' %}id="{{ id }}"{% endif %}
>
    <div class="card">
        {% if image %}
            <img src="{{ image }}" class="card-img-top" alt="{{ title }}">
        {% endif %}
        <div class="card-body">
            {% if title %}
                <h5 class="card-title">{{ title | raw }}</h5>
            {% endif %}
            {% if description %}
                <p class="card-text">{{ description | raw }}</p>
            {% endif %}
            {% if buttonText and buttonUrl %}
                <a href="{{ buttonUrl }}" class="btn btn-primary">
                    {{ buttonText }}
                </a>
            {% endif %}
        </div>
    </div>
</div>
