{# templates/components/block-tabs.html.twig #}
<div class="derafu-block-tabs {{ class }}" id="{{ id }}">
    {% if position == 'horizontal' %}
        <nav class="nav nav-pills nav-justified">
            {% for tab in tabs %}
                <button class="nav-link{% if (activeTab is null and loop.first) or activeTab == tab.id %} active{% endif %}"
                        id="tab-{{ tab.id }}"
                        data-bs-toggle="pill"
                        data-bs-target="#content-{{ tab.id }}"
                        type="button"
                        role="tab"
                        aria-controls="content-{{ tab.id }}"
                        aria-selected="{% if (activeTab is null and loop.first) or activeTab == tab.id %}true{% else %}false{% endif %}">
                    {% if tab.icon is defined %}
                        <i class="{{ tab.icon }} me-2"></i>
                    {% endif %}
                    {{ tab.title }}
                </button>
            {% endfor %}
        </nav>
        <div class="tab-content mt-3">
            {% for tab in tabs %}
                <div class="tab-pane fade{% if (activeTab is null and loop.first) or activeTab == tab.id %} show active{% endif %}"
                    id="content-{{ tab.id }}"
                    role="tabpanel"
                    aria-labelledby="tab-{{ tab.id }}"
                    tabindex="0">
                    {{ tab.content|raw }}
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="row">
            <div class="col-{{ cols }}">
                <nav class="nav nav-pills flex-column">
                    {% for tab in tabs %}
                        <button class="nav-link text-start{% if (activeTab is null and loop.first) or activeTab == tab.id %} active{% endif %}"
                                id="tab-{{ tab.id }}"
                                data-bs-toggle="pill"
                                data-bs-target="#content-{{ tab.id }}"
                                type="button"
                                role="tab"
                                aria-controls="content-{{ tab.id }}"
                                aria-selected="{% if (activeTab is null and loop.first) or activeTab == tab.id %}true{% else %}false{% endif %}">
                            {% if tab.icon is defined %}
                                <i class="{{ tab.icon }} me-2"></i>
                            {% endif %}
                            {{ tab.title }}
                        </button>
                    {% endfor %}
                </nav>
            </div>
            <div class="col">
                <div class="tab-content">
                    {% for tab in tabs %}
                        <div class="tab-pane fade{% if (activeTab is null and loop.first) or activeTab == tab.id %} show active{% endif %}"
                            id="content-{{ tab.id }}"
                            role="tabpanel"
                            aria-labelledby="tab-{{ tab.id }}"
                            tabindex="0">
                            {{ tab.content|raw }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
