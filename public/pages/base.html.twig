<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Derafu Twig{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="{{ base_path }}/assets/css/derafu-twig.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.1.0/github-markdown-light.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css" rel="stylesheet" />
    <style>
        .code-container {
            position: relative;
        }

        .copy-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #007bff;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 12px;
            border-radius: 4px;
        }

        .copy-btn:hover {
            background: #0056b3;
        }

        h1 {
            margin: 24px 0 16px;
            font-weight: 600;
            padding-bottom: 0.3em;
            font-size: 2em;
            line-height: 1.25;
            border-bottom: 1px solid #d7dde3;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg sticky-top bg-body-tertiary mb-4">
        <div class="container">
            <a class="navbar-brand" href="{{ base_path }}/index">Derafu Twig</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ base_path }}/themes">
                            <i class="fa-solid fa-palette"></i>
                            Themes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ base_path }}/components">
                            <i class="fa-solid fa-cubes"></i>
                            Components
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-primary ms-4" href="https://github.com/derafu/twig">
                            <i class="fa-brands fa-github"></i>
                            View on Github
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {% set themes = {
        'default': 'Default',
        'amber-elegance': 'Amber Elegance',
        'royal-sunset': 'Royal Sunset',
        'sky-pro': 'Sky Pro',
        'sky-energy': 'Sky Energy',
        'sunrise-blue': 'Sunrise Blue',
        'earthstone': 'Earthstone',
        'ocean-mystic': 'Ocean Mystic',
        'deep-blue': 'Deep Blue',
        'neo-crimson': 'Neo Crimson',
        'crimson-dark': 'Crimson Dark'
    } %}

    <div class="derafu-theme-default">
        {% block body %}{% endblock %}
    </div>

    {% if html_twig is not empty %}
    <div class="container mt-4 mb-4">
        <div class="code-container">
            <button class="copy-btn" onclick="copyCode(this)">Copy</button>
            <pre><code class="language-twig">{{ html_twig|e }}</code></pre>
        </div>
    </div>
    {% endif %}

    <!-- Footer -->
    <footer class="sticky-bottom py-3 bg-body-tertiary mt-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="text-body-secondary">
                        &copy; {{ "now"|date("Y") }} Derafu Twig -
                        <a href="https://github.com/derafu/twig" class="text-decoration-none">
                            github.com/derafu/twig
                        </a><br/>
                        <small>UI Component and Extension Library</small>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <span class="text-body-secondary">
                        With love <i class="fa-solid fa-heart text-danger"></i> from
                        <a href="https://www.derafu.org" target="_blank" class="text-decoration-none">Derafu ORG</a><br/>
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-markup.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-markup-templating.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-twig.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-php.min.js"></script>
    <script>
        function copyCode(button) {
            let code = button.nextElementSibling.innerText;
            navigator.clipboard.writeText(code).then(() => {
                button.innerText = "Copied!";
                setTimeout(() => button.innerText = "Copy", 2000);
            });
        }
    </script>
    {% block javascripts %}{% endblock %}
</body>
</html>
