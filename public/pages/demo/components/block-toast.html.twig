{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    {% set types = ['primary', 'secondary', 'success', 'danger', 'warning', 'info', 'light', 'dark'] %}
    {% for type in types %}
        <twig:block-toast
            type="{{ type }}"
            title="Toast type: {{ type }}"
            content="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            time="5 mins ago"
        />
    {% endfor %}
</div>
{% endblock %}
