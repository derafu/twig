{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <h1 class="display-6 mb-3">Derafu Twig Components</h1>
    <p class="lead mb-5">A collection of UI components for building modern web interfaces.</p>

    {# Layout Components #}
    <h2 class="h3 mb-4">Layout Components</h2>
    <div class="row g-4 mb-5">
        {% set layout_components = {
            'Grid': {
                'code': 'block-grid',
                'description': 'Basic grid layout system for organizing content'
            },
            'Header': {
                'code': 'block-header',
                'description': 'Page header component with navigation options'
            },
            'Footer': {
                'code': 'block-footer',
                'description': 'Page footer component with various layouts'
            },
            'Box': {
                'code': 'block-box',
                'description': 'Simple box container for content'
            }
        } %}

        {% for title, data in layout_components %}
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">{{ title }}</h3>
                        <p class="card-text text-muted mb-3">{{ data.description }}</p>
                        <code class="d-block mb-3 p-2 bg-light">{{ data.code }}</code>
                        <a href="demo/components/{{ data.code }}" class="btn btn-primary btn-sm">View Demo</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

