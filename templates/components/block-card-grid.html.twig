{# templates/components/block-card-grid.html.twig #}
<section class="block-card-grid theme-{{ this.theme }}">
    <div class="container">
        <div class="row g-4">
            {% for card in this.cards %}
                <div class="col-sm-6 {% if this.cols == 1 %}col-lg-12
                    {% elseif this.cols == 2 %}col-lg-6
                    {% elseif this.cols == 3 %}col-lg-4
                    {% elseif this.cols == 4 %}col-lg-3
                    {% else %}col-lg-2{% endif %}">

                    <div class="block-card-grid__card">
                        {% if card.image %}
                            <div class="block-card-grid__image">
                                <img src="{{ card.image }}" alt="{{ card.title|default('') }}" class="img-fluid">
                            </div>
                        {% endif %}

                        <div class="block-card-grid__content">
                            {% if card.title %}
                                <h3 class="block-card-grid__title">{{ card.title }}</h3>
                            {% endif %}

                            {% if card.description %}
                                <div class="block-card-grid__description">
                                    {{ card.description|raw }}
                                </div>
                            {% endif %}
                        </div>

                        {% if card.button_text and card.button_url %}
                            <div class="block-card-grid__footer">
                                <a href="{{ card.button_url }}" class="block-card-grid__button">
                                    {{ card.button_text }}
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
