{# templates/components/block-table.html.twig #}
<div class="derafu-block-table table-responsive {{ style }}" id="{{ id }}">
    <table class="table table-striped table-bordered table-hover {{ style }}">
        <thead>
            <tr>
                {% for header in headers %}
                    <th scope="{{ header.scope }}">{{ header.text }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for row in rows %}
                <tr>
                    <th scope="{{ row.id.scope }}">{{ row.id.text }}</th>
                    <td>{{ row.nombre }}</td>
                    <td>{{ row.empresa }}</td>
                    <td>{{ row.correo }}</td>
                    <td>{{ row.estado }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
