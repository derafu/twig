<section class="block-grid theme-{{ this.theme }}" id="{{ this.id }}">
    <div class="{{ this.container }}">
        {% if this.cols is not empty %}
            <div style="display: grid; grid-template-columns: repeat({{ this.cols }}, 1fr); gap: 10px;">
                {% for item in items %}
                    <div class="grid-item">
                        {{ item|raw }}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {% set total = this.items|length %}

            {# Determinar el tamaño base de filas #}
            {% set base_row_size = 0 %}
            {% if total % 6 == 0 %}
                {% set base_row_size = 6 %}
            {% elseif total % 4 == 0 %}
                {% set base_row_size = 4 %}
            {% elseif total % 3 == 0 %}
                {% set base_row_size = 3 %}
            {% endif %}

            {# Calcular cuántas filas necesitaremos #}
            {% set rows = [] %}
            {% set remaining = total %}
            {% set offset = 0 %}

            {% for i in range(0, ((total / 2)|round(0, 'ceil') - 1)) %}
                {% if remaining > 0 %}
                    {% set row_size = 0 %}

                    {% if base_row_size > 0 %}
                        {% set row_size = base_row_size %}
                    {% elseif remaining >= 4 %}
                        {% set row_size = 4 %}
                    {% elseif remaining == 3 %}
                        {% set row_size = 3 %}
                    {% elseif remaining == 2 %}
                        {% set row_size = 2 %}
                    {% elseif remaining == 1 %}
                        {% set row_size = 1 %}
                    {% endif %}

                    {% if remaining == 5 and offset == 0 %}
                        {% set row_size = 3 %}
                    {% endif %}

                    <div class="block-grid__row">
                        {% for j in range(0, row_size - 1) %}
                            {% set item = this.items[offset + j] %}
                            <div class="block-grid__item block-grid__item--{{ row_size }}">
                                {{ item|raw }}
                            </div>
                        {% endfor %}
                    </div>

                    {% set offset = offset + row_size %}
                    {% set remaining = remaining - row_size %}
                {% endif %}
            {% endfor %}
        {% endif %}
    </div>
</section>
