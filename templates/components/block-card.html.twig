{# templates/components/block-card.html.twig #}
<section class="block-card theme-{{ this.theme }}">
    <div class="{{ this.container }}">
        <div class="row g-4">
            {% for card in this.cards %}
                <div class="col-sm-6 col-lg-4">
                    <div class="card" style="width: 18rem;" id="{{ this.id }}">
                        {% if card.image %}
                            <img src="{{ card.image }}" class="card-img-top" alt="{{ card.title|default('') }}">
                        {% endif %}
                        <div class="card-body">
                            {% if card.title %}
                                <h5 class="card-title">{{ card.title }}</h5>
                            {% endif %}
                            {% if card.description %}
                                <p class="card-text">{{ card.description }}</p>
                            {% endif %}
                            {% if card.button_text and card.button_url %}
                                <a href="{{ card.button_url }}" class="btn btn-primary">
                                    {{ card.button_text }}
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
